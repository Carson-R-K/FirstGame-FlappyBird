{
  "name": "Flappy Bird PWA",          /* Full app name shown in install prompts */
  "short_name": "FlappyBird",         /* Short name shown under the app icon */

  "icons": [
    {
      "src": "icon.png",              /* App icon file */
      "sizes": "192x192",             /* Required size for home screen icons */
      "type": "image/png"             /* File format */
    }
  ],

  "start_url": "index.html",          /* Page that opens when the app launches */
  "display": "standalone",            /* Makes it feel like a real app (no browser UI) */

  "background_color": "#70c5ce",      /* Color shown while app loads */
  "theme_color": "#70c5ce"            /* Color used by the OS (status bar, etc.) */
}
